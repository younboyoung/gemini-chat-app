{
  "name": "gemini-chat-app",
  "version": "1.0.0",
  "description": "Gemini Chat App with Global Shortcut",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "gemini",
    "chat",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.5.0",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.yourcompany.gemini-chat",
    "productName": "Gemini Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/main.js",
      "src/components/renderer.js",
      "src/components/index.html",
      "src/components/styles.css",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
